@{
    ViewBag.Title = "Đặt lại mật khẩu";
}

<h2>Đặt lại mật khẩu</h2>

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    <div class="form-group">
        <label>Mật khẩu mới</label>
        @Html.Password("newPassword", null, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Nhập lại mật khẩu</label>
        @Html.Password("confirmPassword", null, new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-success">Cập nhật mật khẩu</button>
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3">@ViewBag.Error</div>
}
