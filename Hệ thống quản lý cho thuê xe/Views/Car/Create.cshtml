@model Hệ_thống_quản_lý_cho_thuê_xe.Models.Car

@{
    ViewBag.Title = "Thêm xe mới";
}

<h2>Thêm xe mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.LicensePlate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LicensePlate, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.LicensePlate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Brand, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Model, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PricePerDay, "Giá thuê/ngày", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PricePerDay, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Status, "Trạng thái", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Status, new { @class = "form-control", Value = "Available" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-success" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
}
