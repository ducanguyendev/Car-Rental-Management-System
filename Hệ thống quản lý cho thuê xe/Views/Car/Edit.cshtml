@model Hệ_thống_quản_lý_cho_thuê_xe.Models.Car
@{
    ViewBag.Title = "Sửa thông tin xe";
}

<h2>Sửa thông tin xe</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.CarId)

    <div class="form-group">
        @Html.LabelFor(m => m.LicensePlate)
        @Html.TextBoxFor(m => m.LicensePlate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Brand)
        @Html.TextBoxFor(m => m.Brand, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Model)
        @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PricePerDay)
        @Html.TextBoxFor(m => m.PricePerDay, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">💾 Lưu thay đổi</button>

@Html.ActionLink("⬅️ Quay lại", "Index")
}
