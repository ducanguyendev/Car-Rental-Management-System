@model QuanLyChoThueXe.Models.Booking
@{
    ViewData["Title"] = "Chi Tiết Đặt Xe";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Chi Tiết Đặt Xe #@Model.Id</h4>
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Thông tin khách hàng</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th width="150">Họ tên:</th>
                            <td>@Model.Customer.FullName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Customer.Email</td>
                        </tr>
                        <tr>
                            <th>Điện thoại:</th>
                            <td>@Model.Customer.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Địa chỉ:</th>
                            <td>@Model.Customer.Address</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Thông tin xe</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th width="150">Tên xe:</th>
                            <td>@Model.Car.Name</td>
                        </tr>
                        <tr>
                            <th>Biển số:</th>
                            <td>@Model.Car.LicensePlate</td>
                        </tr>
                        <tr>
                            <th>Hãng:</th>
                            <td>@Model.Car.Brand</td>
                        </tr>
                        <tr>
                            <th>Model:</th>
                            <td>@Model.Car.Model</td>
                        </tr>
                        <tr>
                            <th>Loại:</th>
                            <td>@Model.Car.Type (@Model.Car.Seats chỗ)</td>
                        </tr>
                    </table>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-primary mb-3">Thông tin đặt xe</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th width="180">Ngày bắt đầu:</th>
                            <td>@Model.StartDate.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Ngày kết thúc:</th>
                            <td>@Model.EndDate.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Số ngày:</th>
                            <td>@Model.RentalDays ngày</td>
                        </tr>
                        <tr>
                            <th>Tổng tiền:</th>
                            <td><strong class="text-primary">@Model.TotalPrice.ToString("N0") VNĐ</strong></td>
                        </tr>
                        <tr>
                            <th>Trạng thái:</th>
                            <td>
                                @switch (Model.Status)
                                {
                                    case QuanLyChoThueXe.Models.BookingStatus.Pending:
                                        <span class="badge bg-warning">Chờ xử lý</span>
                                        break;
                                    case QuanLyChoThueXe.Models.BookingStatus.Confirmed:
                                        <span class="badge bg-success">Đã xác nhận</span>
                                        break;
                                    case QuanLyChoThueXe.Models.BookingStatus.Cancelled:
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                }
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <h5 class="text-primary mb-3">Ghi chú</h5>
                        <div class="alert alert-light">@Model.Notes</div>
                    }
                </div>
            </div>

            <div class="mt-4">
                @if (Model.Status == QuanLyChoThueXe.Models.BookingStatus.Pending)
                {
                    <form asp-action="Confirm" method="post" class="d-inline" onsubmit="return confirm('Xác nhận đặt xe này sẽ tạo hợp đồng tự động?');">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check me-2"></i>Xác nhận đặt xe
                        </button>
                    </form>
                }
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

