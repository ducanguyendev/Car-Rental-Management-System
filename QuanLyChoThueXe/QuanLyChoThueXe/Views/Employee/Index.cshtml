@{
    ViewData["Title"] = "Dashboard Nhân Viên";
    var employee = ViewBag.Employee as QuanLyChoThueXe.Models.Employee;
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-primary">
                <i class="fas fa-tachometer-alt me-2"></i>Dashboard Nhân Viên
            </h2>
            <p class="text-muted">Xin chào, @employee?.FullName</p>
        </div>
    </div>

    <!-- Thống kê tổng quan -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-md rounded-circle bg-primary-subtle d-flex align-items-center justify-content-center">
                                <i class="fas fa-car fa-lg text-primary"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted mb-1">Tổng Xe</p>
                            <h4 class="mb-0">@ViewBag.TotalCars</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-md rounded-circle bg-success-subtle d-flex align-items-center justify-content-center">
                                <i class="fas fa-check-circle fa-lg text-success"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted mb-1">Xe Có Sẵn</p>
                            <h4 class="mb-0">@ViewBag.AvailableCars</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-md rounded-circle bg-info-subtle d-flex align-items-center justify-content-center">
                                <i class="fas fa-users fa-lg text-info"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted mb-1">Tổng Khách Hàng</p>
                            <h4 class="mb-0">@ViewBag.TotalCustomers</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-md rounded-circle bg-warning-subtle d-flex align-items-center justify-content-center">
                                <i class="fas fa-calendar-check fa-lg text-warning"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <p class="text-muted mb-1">Đơn Chờ</p>
                            <h4 class="mb-0">@ViewBag.ActiveBookings</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Thao Tác Nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Car")" class="btn btn-outline-primary w-100">
                                <i class="fas fa-car me-2"></i>Quản Lý Xe
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-outline-success w-100">
                                <i class="fas fa-calendar-alt me-2"></i>Quản Lý Đặt Xe
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Index", "RentalContract")" class="btn btn-outline-info w-100">
                                <i class="fas fa-file-contract me-2"></i>Quản Lý Hợp Đồng
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a href="@Url.Action("Overview", "Report")" class="btn btn-outline-warning w-100">
                                <i class="fas fa-chart-bar me-2"></i>Báo Cáo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thông tin nhân viên -->
    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông Tin Nhân Viên</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Họ Tên</label>
                            <p class="mb-0">@employee?.FullName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Vị Trí</label>
                            <p class="mb-0">@employee?.Position</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Phòng Ban</label>
                            <p class="mb-0">@employee?.Department</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Điện Thoại</label>
                            <p class="mb-0">@employee?.PhoneNumber</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Email</label>
                            <p class="mb-0">@employee?.Email</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="text-muted small">Trạng Thái</label>
                            <p class="mb-0">
                                @if (employee?.Status == QuanLyChoThueXe.Models.EmployeeStatus.Active)
                                {
                                    <span class="badge bg-success">Hoạt Động</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Ngừng Hoạt Động</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Cài Đặt</h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("Profile")" class="btn btn-outline-primary w-100 mb-2">
                        <i class="fas fa-user me-2"></i>Hồ Sơ Cá Nhân
                    </a>
                    <a href="@Url.Action("ChangePassword")" class="btn btn-outline-secondary w-100 mb-2">
                        <i class="fas fa-key me-2"></i>Đổi Mật Khẩu
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

