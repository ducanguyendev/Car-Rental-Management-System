@model QuanLyChoThueXe.Models.RentalContract
@{
    ViewData["Title"] = "Tạo Hợp Đồng Mới";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Tạo Hợp Đồng Mới</h4>
        </div>
        <div class="card-body">
            <!-- Display ModelState errors -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i>Vui lòng kiểm tra các lỗi sau:</h5>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }

            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CustomerId" class="form-label">Khách hàng *</label>
                        <select asp-for="CustomerId" class="form-select" asp-items="ViewBag.Customers">
                            <option value="">-- Chọn khách hàng --</option>
                        </select>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CarId" class="form-label">Xe *</label>
                        <select asp-for="CarId" class="form-select" asp-items="ViewBag.Cars">
                            <option value="">-- Chọn xe --</option>
                        </select>
                        <span asp-validation-for="CarId" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="StartDate" class="form-label">Ngày bắt đầu *</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="EndDate" class="form-label">Ngày kết thúc *</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="PricePerDay" class="form-label">Giá mỗi ngày *</label>
                        <input asp-for="PricePerDay" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="PricePerDay" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Số ngày thuê</label>
                        <input type="text" class="form-control" id="rentalDays" readonly />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Tổng tiền</label>
                        <input type="text" class="form-control" id="totalPrice" readonly />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="Deposit" class="form-label">Tiền cọc</label>
                        <input asp-for="Deposit" type="number" step="0.01" class="form-control" />
                        <span asp-validation-for="Deposit" class="text-danger"></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Terms" class="form-label">Điều khoản</label>
                    <textarea asp-for="Terms" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Terms" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Ghi chú</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Tạo hợp đồng
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const startDateInput = document.querySelector('input[name="StartDate"]');
            const endDateInput = document.querySelector('input[name="EndDate"]');
            const pricePerDayInput = document.querySelector('input[name="PricePerDay"]');
            const depositInput = document.querySelector('input[name="Deposit"]');
            const rentalDaysInput = document.getElementById('rentalDays');
            const totalPriceInput = document.getElementById('totalPrice');

            function calculateTotal() {
                const startDate = new Date(startDateInput.value);
                const endDate = new Date(endDateInput.value);
                const pricePerDay = parseFloat(pricePerDayInput.value) || 0;
                
                if (startDate && endDate && endDate > startDate && pricePerDay > 0) {
                    const timeDiff = endDate.getTime() - startDate.getTime();
                    const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24)) + 1; // +1 để tính cả ngày cuối
                    
                    rentalDaysInput.value = daysDiff + ' ngày';
                    const totalPrice = daysDiff * pricePerDay;
                    totalPriceInput.value = totalPrice.toLocaleString('vi-VN') + ' VNĐ';
                    
                    // Tự động tính tiền cọc 50%
                    if (depositInput.value == 0 || depositInput.value == '') {
                        depositInput.value = (totalPrice * 0.5).toFixed(0);
                    }
                } else {
                    rentalDaysInput.value = '';
                    totalPriceInput.value = '';
                }
            }

            startDateInput.addEventListener('change', calculateTotal);
            endDateInput.addEventListener('change', calculateTotal);
            pricePerDayInput.addEventListener('input', calculateTotal);
            
            // Set minimum date to today
            const today = new Date();
            startDateInput.min = today.toISOString().split('T')[0];
            endDateInput.min = today.toISOString().split('T')[0];
        });
    </script>
}

