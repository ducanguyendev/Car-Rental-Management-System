@model IEnumerable<QuanLyChoThueXe.Models.RentalContract>
@{
    ViewData["Title"] = "Quản Lý Hợp Đồng";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary"><i class="fas fa-file-contract me-2"></i>Quản Lý Hợp Đồng</h2>
        <a href="@Url.Action("Create", "RentalContract")" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Tạo Hợp Đồng Mới
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Tìm kiếm</label>
                    <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Số hợp đồng, tên khách hàng...">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Trạng thái</label>
                    <select name="statusFilter" class="form-select">
                        <option value="">Tất cả</option>
                        @foreach (var status in ViewBag.ContractStatuses)
                        {
                            <option value="@status" selected="@(ViewBag.StatusFilter == status)">@status</option>
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-2"></i>Tìm kiếm
                    </button>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-redo me-2"></i>Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Contract List -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Mã HĐ</th>
                            <th>Khách hàng</th>
                            <th>Xe</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Số ngày</th>
                            <th>Tổng tiền</th>
                            <th>Tiền cọc</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contract in Model)
                        {
                            <tr>
                                <td>@contract.ContractNumber</td>
                                <td>@contract.Customer.FullName</td>
                                <td>
                                    <div>@contract.Car.Name</div>
                                    <small class="text-muted">@contract.Car.LicensePlate</small>
                                </td>
                                <td>@contract.StartDate.ToString("dd/MM/yyyy")</td>
                                <td>@contract.EndDate.ToString("dd/MM/yyyy")</td>
                                <td>@contract.RentalDays ngày</td>
                                <td>@contract.TotalPrice.ToString("N0") VNĐ</td>
                                <td>@contract.Deposit.ToString("N0") VNĐ</td>
                                <td>
                                    @switch (contract.Status)
                                    {
                                        case QuanLyChoThueXe.Models.ContractStatus.Draft:
                                            <span class="badge bg-secondary">Nháp</span>
                                            break;
                                        case QuanLyChoThueXe.Models.ContractStatus.Active:
                                            <span class="badge bg-success">Hoạt động</span>
                                            break;
                                        case QuanLyChoThueXe.Models.ContractStatus.Completed:
                                            <span class="badge bg-info">Hoàn thành</span>
                                            break;
                                        case QuanLyChoThueXe.Models.ContractStatus.Cancelled:
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                        case QuanLyChoThueXe.Models.ContractStatus.Expired:
                                            <span class="badge bg-warning">Hết hạn</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@contract.Status</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", "RentalContract", new { id = contract.Id })" class="btn btn-sm btn-info" title="Chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Print", "RentalContract", new { id = contract.Id })" class="btn btn-sm btn-primary" title="In" target="_blank">
                                            <i class="fas fa-print"></i>
                                        </a>
                                        @if (contract.Status == QuanLyChoThueXe.Models.ContractStatus.Active)
                                        {
                                            <form asp-action="Complete" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@contract.Id" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Hoàn thành" onclick="return confirm('Xác nhận hoàn thành hợp đồng?');">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                            <form asp-action="Cancel" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@contract.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" title="Hủy" onclick="return confirm('Xác nhận hủy hợp đồng?');">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

