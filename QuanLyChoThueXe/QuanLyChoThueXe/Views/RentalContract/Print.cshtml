@model QuanLyChoThueXe.Models.RentalContract
@{
    ViewData["Title"] = "In Hợp Đồng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hợp Đồng Thuê Xe @Model.ContractNumber</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <style>
        @@media print {
            .no-print { display: none !important; }
            body { margin: 0; }
            .card { border: none; box-shadow: none; }
        }
        body { font-family: Arial, sans-serif; }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="d-flex justify-content-end mb-3 no-print">
            <button onclick="window.print()" class="btn btn-primary">
                <i class="fas fa-print me-2"></i>In
            </button>
            <a href="@Url.Action("Details", "RentalContract", new { id = Model.Id })" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại
            </a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <div class="text-center mb-4">
                    <h3 class="text-primary">CÔNG TY TNHH CHO THUÊ XE</h3>
                    <p class="mb-0">HỢP ĐỒNG THUÊ XE</p>
                    <p><strong>Số: @Model.ContractNumber</strong></p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5>BÊN CHO THUÊ XE (BÊN A)</h5>
                        <p>CÔNG TY TNHH CHO THUÊ XE<br />
                           Địa chỉ: 123 Đường ABC, Quận 1, TP.HCM<br />
                           Điện thoại: 0123456789</p>
                    </div>
                    <div class="col-md-6">
                        <h5>BÊN THUÊ XE (BÊN B)</h5>
                        <p><strong>@Model.Customer.FullName</strong><br />
                           Số CMND/CCCD: @Model.Customer.IdentityNumber<br />
                           Địa chỉ: @Model.Customer.Address<br />
                           Điện thoại: @Model.Customer.PhoneNumber<br />
                           Email: @Model.Customer.Email</p>
                    </div>
                </div>

                <div class="mb-4">
                    <h5>1. THÔNG TIN XE THUÊ</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Tên xe:</th>
                            <td>@Model.Car.Name</td>
                        </tr>
                        <tr>
                            <th>Biển số:</th>
                            <td>@Model.Car.LicensePlate</td>
                        </tr>
                        <tr>
                            <th>Hãng xe:</th>
                            <td>@Model.Car.Brand - @Model.Car.Model</td>
                        </tr>
                        <tr>
                            <th>Năm sản xuất:</th>
                            <td>@Model.Car.Year</td>
                        </tr>
                        <tr>
                            <th>Loại xe:</th>
                            <td>@Model.Car.Type (@Model.Car.Seats chỗ)</td>
                        </tr>
                    </table>
                </div>

                <div class="mb-4">
                    <h5>2. THỜI GIAN THUÊ</h5>
                    <p>Bắt đầu: <strong>@Model.StartDate.ToString("dd/MM/yyyy")</strong></p>
                    <p>Kết thúc: <strong>@Model.EndDate.ToString("dd/MM/yyyy")</strong></p>
                    <p>Số ngày thuê: <strong>@Model.RentalDays ngày</strong></p>
                </div>

                <div class="mb-4">
                    <h5>3. GIÁ THUÊ VÀ THANH TOÁN</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th>Giá thuê mỗi ngày:</th>
                            <td class="text-end">@Model.PricePerDay.ToString("N0") VNĐ</td>
                        </tr>
                        <tr>
                            <th>Tổng tiền thuê:</th>
                            <td class="text-end"><strong>@Model.TotalPrice.ToString("N0") VNĐ</strong></td>
                        </tr>
                        <tr>
                            <th>Tiền cọc (50%):</th>
                            <td class="text-end"><strong>@Model.Deposit.ToString("N0") VNĐ</strong></td>
                        </tr>
                        <tr>
                            <th>Số tiền còn lại:</th>
                            <td class="text-end"><strong>@((Model.TotalPrice - Model.Deposit).ToString("N0")) VNĐ</strong></td>
                        </tr>
                    </table>
                </div>

                <div class="mb-4">
                    <h5>4. ĐIỀU KHOẢN</h5>
                    <div style="white-space: pre-wrap;">@Model.Terms</div>
                </div>

                <div class="mt-5">
                    <div class="row">
                        <div class="col-md-6 text-center">
                            <p><strong>BÊN A</strong></p>
                            <p>(Ký và ghi rõ họ tên)</p>
                            <br /><br />
                            <p>_________________________</p>
                        </div>
                        <div class="col-md-6 text-center">
                            <p><strong>BÊN B</strong></p>
                            <p>(Ký và ghi rõ họ tên)</p>
                            <br /><br />
                            <p>_________________________</p>
                            <p><strong>@Model.Customer.FullName</strong></p>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <p class="text-muted">Ngày ký: <strong>@DateTime.Now.ToString("dd/MM/yyyy")</strong></p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

